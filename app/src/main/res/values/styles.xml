<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarTheme">@style/MainMenu</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>

    <style name="MainMenu" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="titleTextColor">@android:color/white</item>
        <!--change overflow icon color-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="TextAppearance.Small" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Small.Primary" parent="TextAppearance.Small">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Small.Accent" parent="TextAppearance.Small">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Medium" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewLabel">
        <item name="fontPath">font/Roboto-Medium.ttf</item>
        <item name="android:layout_marginStart">@dimen/space_small</item>
        <item name="android:textAppearance">@style/TextAppearance.Small.Primary</item>
    </style>

    <style name="TextViewNav">
        <item name="fontPath">font/Roboto-Medium.ttf</item>
        <item name="android:textAppearance">@style/TextAppearance.Small.Accent</item>
    </style>

    <style name="TextViewParagraph">
        <item name="fontPath">font/Roboto-Regular.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Button.Inactive" parent="Button">
        <item name="android:textColor">@color/textInactive</item>
        <item name="android:background">#dddddd</item>
    </style>

    <style name="Button.Active" parent="Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="Button.BorderOnly" parent="Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/background_button_bordered</item>
    </style>
</resources>
